template(name="archivedBoards")
  h2
    i.fa.fa-archive
    | {{_ 'archived-boards'}}

  ul.archived-lists
    each archivedBoards
      li.archived-lists-item
        div.board-header-btns
          button.board-header-btn.js-delete-board
            i.fa.fa-trash-o
            | {{_ 'delete-board'}}
          button.board-header-btn.js-restore-board
            i.fa.fa-undo
            | {{_ 'restore-board'}}
          if($eq showBoardKey 'key-hide-key')
            +viewer
              = title
          if($eq showBoardKey 'key-postfix-title-key-bracketed')
            +viewer
              = title
              = " ("
              = boardKey
              = ")"
          if($eq showBoardKey 'key-prefix-title-dash')
            +viewer
              = boardKey
              = " - "
              = title
          if($eq showBoardKey 'key-only-key')
            +viewer
              = boardKey

    else
      li.no-items-message {{_ 'no-archived-boards'}}

template(name="boardDeletePopup")
  p {{_ 'delete-board-confirm-popup'}}
  button.js-confirm.negate.full(type="submit") {{_ 'delete'}}
